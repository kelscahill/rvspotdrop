{% set base_class = dashboard_support_nav.base_class|default('c-dashboard-support-nav') %}

{% if dashboard_support_nav.name == "Dashboard Support Navigation" %}
  <nav role="navigation" class="{{ bem_classes(base_class, dashboard_support_nav.element, dashboard_support_nav.modifiers, dashboard_support_nav.extra) }}">
    {% if dashboard_support_nav.items %}
      <ul class="{{ bem_classes(base_class, 'parent-list') }}">
        {% for item in dashboard_support_nav.get_items %}
          <li class="{{ bem_classes(base_class, 'parent-list-item') }}">
            {% include "@atoms/links/link.twig" with {
              "link": {
                "text": item.title,
                "url": item.url,
                "target": item.target,
                "extra": [
                  bem_classes(base_class, 'link'),
                ]|merge(item.classes),
              }
            } %}
          {% endfor %}
        </li>
      </ul>
    {% endif %}
  </nav>
{% endif %}
