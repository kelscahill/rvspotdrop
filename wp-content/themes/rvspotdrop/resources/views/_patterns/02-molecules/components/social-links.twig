<div class="c-social-links">
  {% if options.facebook_url %}
    <a href="{{ options.facebook_url }}" class="c-social-links__item o-icon o-icon--small" target="_blank" rel="noopener">
      {% include "@atoms/icons/facebook.twig" %}
    </a>
  {% endif %}
  {% if options.instagram_url %}
    <a href="{{ options.instagram_url }}" class="c-social-links__item o-icon o-icon--small" target="_blank" rel="noopener">
      {% include "@atoms/icons/instagram.twig" %}
    </a>
  {% endif %}
</div>